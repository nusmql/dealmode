// offer.pug
- var bgcolor = index=== 0? '#D3D3D3' : '#FFFFFF'
div(class="box offer" style="cursor:pointer;")
  div(class="row offer-user" data-offer=`${JSON.stringify(offer)}` style=`border-bottom:1px solid #ddd; background: ${bgcolor};`)
    div(class="col-xs-4")
      img(
      data-src="holder.js/90x90"
      class="img-circle"
      src="data:image/svg+xml;base64,"
      alt="90x90"
      style="width: 90px; height: 90px;"
      data-holder-rendered="true"
      )
    div(class="col-xs-8 caption")
      span
        h5 #{offer.company}
      span #{offer.user.name}
    div(class="col-xs-12")
      table(class="table table-borderless")
        tr
          td
            h4
              |03:12
          td
            h4 #{offer.price}
